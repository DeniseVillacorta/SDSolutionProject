@model TestProject.Models.ViewModel.Buses.BusFormViewModel
@{
    ViewBag.Title = "BusForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bus Form</h2>
<p></p>

@using (Html.BeginForm("Save", "Bus"))
{

    @Html.ValidationSummary(true, "Please Fill up Requirements")

    <div class="form-group">
        @Html.LabelFor(b => b.Bus.BusNo)
        @Html.TextBoxFor(b => b.Bus.BusNo, "{0:#.#}", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Bus.BusNo)
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Bus.PlateNo)
        @Html.TextBoxFor(b => b.Bus.PlateNo, "{0:#.#}", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Bus.PlateNo)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Bus.EmployeeId)
        @Html.DropDownListFor(b => b.Bus.EmployeeId, new SelectList(Model.Employees, "Id", "FirstName"), "Select Employee", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Bus.EmployeeId)
    </div>

    <p></p>
    @Html.HiddenFor(b => b.Bus.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Save </button>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

